-# frozen_string_literal: true
.modal-dialog
  .modal-content
    = simple_form_for(@room) do |f|
      .modal-header
        %h4.modal-title Room
        %button.close{ type: :button, data: { dismiss: :modal } }
          %span &times;
      .modal-body
      = f.input :code, as: :string, label: 'Room Code (eg. 2.01)'
      = f.input :name, as: :string, label: 'Room Name'

      .modal-footer
        .pull-left
          = dismiss_modal_button
        = f.button :submit