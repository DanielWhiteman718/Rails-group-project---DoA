.modal-dialog
    .modal-content
        .modal-header
            %h4.modal-title View Table  
            %button.close{ type: :button, data: { dismiss: :modal } } 
                %span &times;
        .modal-body
            %table#acts-per-tech
                %thead
                    %tr
                        %th Technician
                        %th Number of Activities
                    %body
                        - @techStats.each do |tech|
                            %tr
                                %td #{tech[0]}
                                %td #{tech[1]}
        .modal-footer         
            .pull-left           
                = dismiss_modal_button