-# frozen_string_literal: true
.modal-dialog
  .modal-content
    = simple_form_for(@objective, remote: true) do |f|
      .modal-header
        %h4.modal-title New Outcome
        %button.close{ type: :button, data: { dismiss: :modal } }
          %span &times;
      .modal-body
        = f.input :code, as: :string, label: 'Code'
        = f.input :name, as: :string, label: 'Title'

      .modal-footer
        = f.button :submit, :class => "btn btn-primary btn-sm tablebutton"